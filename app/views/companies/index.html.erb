<div class="container lg:mt-12 mt-6 mx-auto flex justify-center">
  <div class="lg:mx-42 mx-6">    
    <div class="flex md:flex-row md:justify-between">
      <div class="font-bold text-center text-2xl text-blue-800">
        <h1> Negocios </h1>
      </div>
      <div class="text-left">
        <%= link_to 'Nuevo negocio', new_company_path, :class => 'bg-blue-900 text-white font-bold rounded p-2' %>
      </div>
    </div>
    <table class="table-auto lg:mt-4 mt-2">
      <thead>
        <tr class="bg-blue-500 text-white text-left">
          <th class="w-52 py-2"> Nombre </th>
          <th class="w-24"> Direcci√≥n </th>		            
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td class="py-4"><%= company.name %></td>
            <td class="py-4"><%= company.address %></td>
            <td class="py-4"><%= image_tag(company.company_img , width:300) if company.company_img.attached? %></td>
            <td class="py-4 lg:pl-2 pl-0"><%= link_to 'Editar', edit_company_path(company), :class => 'bg-red-600 text-white font-bold rounded lg:p-2 p-1' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>	
  </div>
</div>
<nav class="container text-center my-6">
  <%= render partial: 'shared/pagination', locals: { pagy: @pagy } %>
</nav>
