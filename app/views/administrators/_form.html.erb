<%= form_with model: @administrator, local: true, url: administrators_path do |form| %>
  <div class="mb-4 mt-6">
    <%= form.label :name, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
    <%= form.text_field :name, class: 'text-sm bg-gray-200 appearance-none rounded w-full py-2 px-3 text-gray-700 mb-1 
                                       leading-tight focus:outline-none focus:shadow-outline h-10' %>
  </div>
  <div class="mb-4 mt-6">
    <%= form.label :email, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
    <%= form.text_field :email, class: 'text-sm bg-gray-200 appearance-none rounded w-full py-2 px-3 text-gray-700 mb-1 
                                        leading-tight focus:outline-none focus:shadow-outline h-10' %>
  </div>
  <div class="mb-4 mt-6">
    <%= form.label :password, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
    <%= form.password_field :password, class: 'text-sm bg-gray-200 appearance-none rounded w-full py-2 px-3 text-gray-700 
                                               mb-1 leading-tight focus:outline-none focus:shadow-outline h-10' %>
  </div>
  <div class="flex w-full mt-8">
    <%= form.submit "Save", class: 'w-full bg-gray-800 hover:bg-grey-900 text-white text-sm py-2 px-4 font-semibold 
                                        rounded focus:outline-none focus:shadow-outline h-10' %>
  </div>
<% end %>
