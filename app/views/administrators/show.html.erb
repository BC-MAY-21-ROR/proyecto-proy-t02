  <div class="block text-gray-700 text-sm font-semibold mb-2">
    <p>Email</p>
  </div>
  
  <div class='text-sm bg-gray-200 appearance-none rounded w-full py-2 px-3 text-gray-700 mb-1 
    leading-tight focus:outline-none focus:shadow-outline h-10'>
