<div>
  <section class="min-h-full bg-blue-100 lg:p-32 p-14 text-right" style="background-image: url('https://images.unsplash.com/photo-1606836483111-e08386681a8b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80'); background-size: cover">
    <h1 class="lg:text-5xl text-xl font-bold text-white mb-14 px-2"><%= @product %></h1>
  </section>
  <% if @results.empty? %>
    <h1 class="text-4xl font-extrabold text-gray-900 sm:text-3xl">No se encontro el producto : <%= @product %> </h1>
  <% else %>
    <h1 class="text-4xl font-extrabold text-gray-900 sm:text-3xl">Mostrando resultados de : <%= @product %></h1>
    <div class="mt-6 grid sm:grid-cols-2 sm:gap-x-8 xl:grid-cols-3 xl:gap-x-12">
      <% @results.each do |result| %>
        <%= render 'product_card', product: result %>
      <% end %>
    </div>
  <% end %>
</div>
