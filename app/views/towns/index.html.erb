<div class="container lg:mt-12 mt-6 mx-auto flex justify-center">
  <div class="lg:mx-42 mx-6">
    <div class="flex md:flex-row justify-between">
      <div class="font-bold text-center text-2xl text-blue-800">
        <h1> Ciudades/Localidades </h1>
      </div>

      <div class="text-left">
        <%= link_to 'Nuevo Municipio', new_town_path, :class => 'bg-blue-900 text-white font-bold rounded p-1' %>
      </div>
    </div>

    <table class="table-auto lg:mt-4 mt-2">
      <thead>
        <tr class="bg-blue-500 text-white text-left">
          <th class="w-52 py-2 px-1"> Nombre </th>
          <th class="w-52 py-2 px-1"> Municipio </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @towns.each do |town| %>
          <tr>
            <td class="py-4 px-1"><%= town.name %></td>
            <td class="py-4 px-1"><%= town.township.name%></td>
            <td class="py-4 lg:pl-2 pl-0"><%= link_to image_tag("edit_icon.svg"), edit_town_path(town) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>    
  </div>
</div>
<nav class="container text-center my-6">
  <%= render partial: 'shared/pagination', locals: { pagy: @pagy } %>
</nav>
