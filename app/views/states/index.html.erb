<div class="container lg:mt-12 mt-6 mx-auto flex justify-center">
  <div class="lg:mx-42 mx-6">
    <h1 class="font-bold text-center text-2xl text-blue-800"> Estados </h1>
    <table class="table-auto lg:mt-4 mt-2">
      <thead>
        <tr class="bg-blue-500 text-white text-left">
          <th class="w-52 py-2"> Nombre </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @states.each do |state| %>
        <tr>
          <td class="py-4"><%= state.name %></td>
          <td class="py-4 lg:pl-2 pl-0">
            <%= link_to 'Editar', edit_state_path(state), :class => 'bg-red-600 text-white font-bold rounded lg:p-2 p-1' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br />
    <div class="text-left">
      <%= link_to 'Nuevo estado', new_state_path, :class => 'bg-blue-900
      text-white font-bold rounded p-2' %>
    </div>
  </div>
</div>
<nav class="container text-center my-6">
  <%= render partial: 'shared/pagination', locals: { pagy: @pagy } %>
</nav>
