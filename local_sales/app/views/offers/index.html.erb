<div class="container lg:mt-12 mt-6 mx-auto flex justify-center">
  <div class="lg:mx-42 mx-6">
    <div class="flex md:flex-row md:justify-between">
      <div class="font-bold text-center text-2xl text-blue-800">
        <h1> Ofertas </h1>
      </div>
      <div class="text-left">
        <%= link_to 'Nueva oferta', new_offer_path, :class => 'bg-blue-900 text-white font-bold rounded p-2' %>
      </div>
    </div>
    <table class="table-auto lg:mt-4 mt-2">
      <thead>
        <tr class="bg-blue-500 text-white text-left">
        <th class="w-52 py-2 px-2"> Nombre </th>
        <th class="w-24"> Descuento </th>
        <th class="w-24"> Estatus </th>		  
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @offers.each do |offer| %>
        <tr>
          <td class="py-4 px-2"><%= offer.name %></td>
          <td class="py-4"><%= offer.discount %></td>
          <td class="py-4"><%= offer.status %></td>                
          <td class="py-4 lg:pl-2 pl-0"><%= link_to image_tag("edit_icon.svg"), edit_offer_path(offer) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>	  
  </div>
</div>
