<div class="lg:mt-8 mt-6">
  <%= form_with(model: state) do |form| %> <% if state.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(state.errors.count, "error") %> prohibited this state from
      being saved:
    </h2>
    <ul>
      <% state.errors.each do |error| %>
      <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="mb-4 mt-6">
    <%= form.label :Nombre, :class => 'block text-blue-600 mb-2' %> <%=
    form.text_field :name, :class => 'lg:w-96 w-auto bg-gray-200 rounded
    border-none' %>
  </div>

  <div class="text-center lg:mt-6 mt-10">
    <%= form.submit 'Guardar', :class => 'text-white rounded cursor-pointer w-32
    h-10 transition duration-150 ease-in-out bg-blue-900 transform
    hover:-translate-y-1 hover:scale-110' %>
  </div>
  <% end %>
</div>
