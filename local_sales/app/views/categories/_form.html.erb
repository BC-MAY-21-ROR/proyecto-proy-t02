<%= form_with(model: category, local: true) do |form| %>

  <div>
    <label for="fname">Categoria:</label><br>
    <%= form.text_field :name %><br>
  </div>

  <div class="actions">
    <% if action_name=="edit"  %>
      <%= form.submit "Actualizar Categoria", :class => 'rounded ... '%>
    <% else %>
      <%= form.submit "Crear Categoria", :class => 'rounded ...'%>
    <% end %>
  </div>
  
<% end %>
