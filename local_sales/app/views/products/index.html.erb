<div class="container lg:mt-12 mt-6 mx-auto flex justify-center">
  <div class="lg:mx-42 mx-6">
    <h1 class="font-bold text-center text-2xl text-blue-800"> Productos </h1>
    <table class="table-auto lg:mt-4 mt-2">
      <thead>
        <tr class="bg-blue-500 text-white text-left">
        <th class="w-52 py-2"> Nombre </th>
        <th class="w-24"> Precio </th>
        <th class="w-24"> Cantidad </th>
        <th class="w-54"> Descripci√≥n </th>
        <th></th>
      </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td class="py-4"><%= product.name %></td>
            <td class="py-4"><%= product.price %></td>
            <td class="py-4"><%= product.quantity %></td>
            <td class="py-4"><%= product.description %></td>
            <td class="py-4 lg:pl-2 pl-0">
              <%= link_to 'Editar', edit_product_path(product), :class => 'bg-red-600 text-white font-bold rounded lg:p-2 p-1' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <div class="text-left">
      <%= link_to 'Nuevo producto', new_product_path, :class => 'bg-blue-900 text-white font-bold rounded p-2' %>
    </div>  
  </div>
</div>

<div class="container text-center mt-6">
  <%= pagy_nav(@pagy).html_safe%>
</div>
